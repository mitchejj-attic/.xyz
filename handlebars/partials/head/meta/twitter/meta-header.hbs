<meta name="twitter:card" content="summary" />
<meta name="twitter:site" content="{{ site.twitter }}" />
<meta name="twitter:creator" content="@{{ author.twitter }}" />
{{~#if title~}}<meta name="twitter:title" content="{{ title }}" />{{~else~}}<meta name="twitter:title" content="{{ site.title }}" />{{~/ if ~}}
{{~#if subtitle~}}<meta name="twitter:description" content="{{ subtitle }}" />{{~else~}}<meta name="twitter:description" content="{{ site.description }}" />{{~/if~}}
{{~# if meta.image.url ~}}<meta property="twitter:image" content="{{ meta.image.url }}" />{{~/ if ~}}
