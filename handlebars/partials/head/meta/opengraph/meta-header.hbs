<meta property="og:site_name" content="{{ site.title }}" />
{{# if lastmod ~}}<meta property="og:updated_time" content="{{iso_date lastmod }}" />{{~/ if }}
<meta property="og:locale" content="en_US" />
{{# if title ~}}<meta property="og:type" content="article" />{{~else~}}<meta property="og:type" content="website" />{{~/ if }}
{{# if meta.description ~}}<meta property="og:description" content="{{ meta.description }}" />{{~/ if }}
{{# if title ~}}<meta property="og:title" content="{{ title }}" />{{~/ if }}
{{# if subtitle ~}}<meta property="og:description" content="{{ subtitle }}" />{{~/ if }}
{{# if meta.image.url ~}}<meta property="og:image" content="{{ meta.image.url }}" />{{~/ if }}
{{# if path.href ~}}<meta property="og:url" content="{{ site.uri }}{{ path.href }}" />{{~/ if }}
<meta property="article:author" content="{{ author.name }}" />
{{# if tags ~}}<meta property="article:tag" content="{{#each tags as |tag|}}{{ tag }}{{/each}}" />{{~/ if }}
{{# if date ~}}<meta property="article:published_time" content="{{iso_date date }}" />{{~/ if }}
{{# if lastmod ~}}<meta property="article:modified_time" content="{{iso_date lastmod }}" />{{~/ if }}
