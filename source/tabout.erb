<% a = Array.new %>
<% sitemap.resources.each do |resource|
   if resource.data.group && resource.data.group.downcase.include?('nav')
      a.push resource
    end %>
<% end %>
<% a.each_with_index do |n, i| %>
   <%= link_to n.data.title, n.url %>
   <% if  i + 1 <  a.count %><small> | </small><% end %>
<% end %>
