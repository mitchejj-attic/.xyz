<% wrap_layout :layout do %>
<article class="page">
   <header class="page-title">
      <h2><%= current_page.data.title %> <span class="mute"><%= current_page.data.description %></span></h2>
   </header>
   <div class="page-body">
      <%= yield %>
   </div>
</article>
<% end %>

<%= yield_content(:alt_title) if content_for?(:alt_title) %>
