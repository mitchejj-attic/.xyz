<article class="post <%= current_article.tags.sort.join(' ') %> " itemscope="" itemtype="http://schema.org/BlogPosting">
   <%= partial "resources/_layouts/_partials/post_head", locals: {current_article: current_article, index: defined?(index)} %>


   <div class="post-body" itemprop="articleBody">
      <% unless current_article.data.meta.image.url.nil? %>
      <figure>
         <a href="<%= current_article.data.meta.image.link || current_article.data.meta.image.url %>"><img src="<%= current_article.data.meta.image.url %>" alt="<%= current_article.data.meta.image.caption || current_article.data.subtitle %>"></a>
      </figure>
      <% end %>
      <% case %>
         <% when defined?(index).nil? || !current_article.data.truncatable %>
            <%= current_article.body %>
         <% else %>
            <%= current_article.summary %>
            <% if current_article.body != current_article.summary %>
               <%= link_to 'Read moreâ€¦', current_article %>
            <% end %>
      <% end %>
   </div>
</article>
